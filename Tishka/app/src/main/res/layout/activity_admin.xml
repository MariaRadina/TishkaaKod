<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myfon"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/strelka"
        android:layout_width="66dp"
        android:layout_height="112dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/strelka" />
    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/doggg" />

    <TextView
        android:id="@+id/app_sloan"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="15dp"
        android:text="Администратор"
        android:textAlignment="center"
        android:textColor="#00137D"
        android:textSize="28sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_sloan"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="29dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button"
        android:padding="20dp"
        android:text="Управление запасами"
        android:textColor="#FDFDFD"
        android:textSize="22dp" />
    <Button
        android:id="@+id/login_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button"
        android:padding="20dp"
        android:text="Клиенты и заказы"
        android:textColor="#FDFDFD"
        android:textSize="22dp" />
    <Button
        android:id="@+id/login_btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button"
        android:padding="20dp"
        android:text="Обучающие материалы и руководства"
        android:textColor="#FDFDFD"
        android:textSize="20dp" />
    <Button
        android:id="@+id/login_btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button"
        android:padding="20dp"
        android:text="Зарегистрировать новых пользователей"
        android:textColor="#FDFDFD"
        android:textSize="22dp" />

</RelativeLayout>