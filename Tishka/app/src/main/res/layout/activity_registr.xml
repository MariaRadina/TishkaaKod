<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myfon"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/strelka"
        android:layout_width="98dp"
        android:layout_height="57dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/strelka" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo2" />


    <TextView
        android:id="@+id/app_sloan3"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-9dp"
        android:padding="20dp"
        android:text="Регистрация аккаунта"
        android:textAlignment="center"
        android:textColor="#9966F3"
        android:textSize="35dp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/login_phone_imput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_sloan3"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="39dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/input_design"
        android:hint="Роль"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:textColor="#0334F8"
        android:textColorHint="#02308C"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/login_password_imput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_phone_imput"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/input_design"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColor="#0334F8"
        android:textColorHint="#042C7C"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_password_imput"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="31dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button"
        android:padding="20dp"
        android:text="Зарегистрироваться"
        android:textColor="#FDFDFD"
        android:textSize="22dp" />


</RelativeLayout>