<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myfon"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/btzad"
        android:layout_width="106dp"
        android:layout_height="36dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button"
        android:padding="20dp"
        android:text="Назад"
        android:textColor="#FDFDFD"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo2" />

    <TextView
        android:id="@+id/app_sloan"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:text="Аптека ветеринарная "
        android:textColor="#00137D"
        android:textSize="27sp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/app_sloan2"
        android:layout_width="3000dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:text="«У Тишки» "
        android:padding="20dp"
        android:layout_marginTop="35dp"
        android:textColor="#E0CB0B"
        android:textSize="44dp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        />
    <EditText
        android:id="@+id/login_phone_imput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_sloan2"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:hint="Логин"
        android:inputType="textEmailAddress"
        android:textColorHint="#02308C"
        android:textColor="#0334F8"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/login_password_imput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_phone_imput"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:textColorHint="#042C7C"
        android:textColor="#0334F8"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_password_imput"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:padding="20dp"
        android:text="Войти"
        android:textSize="22dp"
        android:textColor="#FDFDFD"
        />




</RelativeLayout>